<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/white"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_beacon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beacon Name"
            android:textSize="@dimen/text_subhead"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_beacon_name"
            android:layout_marginTop="4dp"
            android:text="UUID: 2EDB7643-3B2D-488A-90D9-FC9A1F67EF6B"
            android:textSize="@dimen/text_body" />

        <TextView
            android:id="@+id/txt_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_uuid"
            android:layout_marginTop="4dp"
            android:text="Major: 1001"
            android:textSize="@dimen/text_body" />

        <TextView
            android:id="@+id/txt_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_uuid"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/txt_major"
            android:text="Minor: 1001"
            android:textSize="@dimen/text_body" />

        <TextView
            android:id="@+id/txt_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_major"
            android:layout_marginTop="4dp"
            android:text="RSSI: 1001"
            android:textSize="@dimen/text_body" />

        <TextView
            android:id="@+id/txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_major"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/txt_rssi"
            android:text="DistÃ¢ncia: 1001"
            android:textSize="@dimen/text_body" />

    </RelativeLayout>
</android.support.v7.widget.CardView>